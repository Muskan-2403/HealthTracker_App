        android:layout_width="20dp"
        android:layout_height="35dp"
        android:src="@drawable/medal_achivement"
        android:layout_gravity="center"/>
</androidx.cardview.widget.CardView>
</androidx.cardview.widget.CardView>
</LinearLayout>