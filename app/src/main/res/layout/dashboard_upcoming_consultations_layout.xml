<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="210dp"
    android:orientation="vertical"
    android:backgroundTint="#EFF8FF"
    android:layout_marginStart="10dp">

    <androidx.cardview.widget.CardView
        android:layout_width="134dp"
        android:layout_marginLeft="10dp"
        app:cardCornerRadius="10dp"
        app:cardBackgroundColor="#EFF8FF"
        android:layout_height="200dp">

        <TextView
            android:id="@+id/consultation_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/baloo_bhai_2"
            android:layout_marginLeft="39dp"
            android:layout_marginTop="8dp"
            android:text="Dec 07"
            android:textColor="#4A4A4A" />

        <TextView
            android:id="@+id/consultation_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/baloo_bhai_2"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="39dp"
            android:text="05:00 PM" />
        <!--android:textColor="#4A4A4A"-->
        <androidx.cardview.widget.CardView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="47dp"
            android:layout_marginLeft="39dp">
            <ImageView
                android:id="@+id/consultation_profile_photo"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:scaleType="centerCrop"
                android:src="@drawable/doctor_blue_border"
                />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/consultation_profile_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="110dp"
            android:text="Michael Simpson"
            android:textSize="18dp" />

        <Button
            android:id="@+id/joincall"
            android:layout_width="100dp"
            android:layout_height="25dp"
            android:layout_marginLeft="17dp"
            android:layout_marginTop="165dp"
            android:background="@drawable/rounded_corner"
            android:backgroundTint="#4B9AFB"
            android:text="Join the call" />
        
    </androidx.cardview.widget.CardView>

</LinearLayout>