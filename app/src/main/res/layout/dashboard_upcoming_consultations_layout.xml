<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="200dp"
    android:layout_height="240dp"
    android:orientation="vertical"
    android:backgroundTint="#EFF8FF"
    android:layout_marginStart="10dp"
    android:background="@drawable/rounded_corner">


    <TextView
        android:id="@+id/consultation_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/baloo_bhai_2"
        android:text="Dec 07"
        android:textFontWeight="500"
        android:textAlignment="center"
        android:layout_marginStart="65dp"
        android:textColor="#4A4A4A" />

    <TextView
        android:id="@+id/consultation_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="65dp"
        android:fontFamily="@font/baloo_bhai_2"
        android:paddingTop="3dp"
        android:text="05:00 PM"
        android:textAlignment="center"
        android:textColor="#4A4A4A"
        android:textFontWeight="500" />
    <androidx.cardview.widget.CardView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="2dp"
        android:layout_marginStart="60dp"
        android:layout_alignParentTop="true"
        app:cardCornerRadius="250dp"
        android:layout_gravity="center_vertical">
    <ImageView
        android:id="@+id/consultation_profile_photo"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/doctor_blue_border"
        />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/consultation_profile_name"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:fontFamily="@font/asul"
        android:text="Michael Simpson"
        android:textAlignment="center"
        android:textFontWeight="400"
        android:textSize="18sp" />

    <Button
        android:id="@+id/joincall"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="5dp"
        android:text="Join the call"
        android:background="@drawable/rounded_corner" />

</LinearLayout>