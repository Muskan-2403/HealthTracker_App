<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ClientDetails"
    android:paddingHorizontal="25dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.cardview.widget.CardView
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginTop="75dp"
        android:id="@+id/imageView2"
        android:background="@drawable/doctor_pic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="10dp"
        app:cardCornerRadius="50dp"
        app:cardElevation="10dp">
        <ImageView
            android:id="@+id/imageView3"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:src="@drawable/doctor_pic" />
    </androidx.cardview.widget.CardView>


    <TextView
        android:id="@+id/clientIDTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="90dp"
        android:fontFamily="@font/montserrat"
        android:text="Ronald Richards"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/imageView2"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/clientemailTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="115dp"
        android:fontFamily="@font/montserrat"
        android:text="ronaldrichards@gmail.com"
        android:textColor="@color/black"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@+id/imageView2"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/monileTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="130dp"
        android:fontFamily="@font/montserrat"
        android:text="9988776666"
        android:textColor="@color/black"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@+id/imageView2"
        app:layout_constraintTop_toTopOf="parent" />
    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="160dp"
        app:cardCornerRadius="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            style="@style/client_title_txt"
            android:layout_marginStart="11dp"
            android:layout_marginTop="12dp"
            android:text="Gender" />

        <TextView
            style="@style/client_title_txt"
            android:layout_marginLeft="112dp"
            android:layout_marginTop="12dp"
            android:text="Age" />

        <TextView
            style="@style/client_title_txt"
            android:layout_marginLeft="225dp"
            android:layout_marginTop="12dp"
            android:text="Phone No" />

        <TextView
            android:id="@+id/genderTV"
            style="@style/client_details_txt"
            android:layout_marginStart="11dp"
            android:layout_marginTop="32dp"
            android:text="Male" />

        <TextView
            android:id="@+id/ageTV"
            style="@style/client_details_txt"
            android:layout_marginLeft="112dp"
            android:layout_marginTop="32dp"
            android:text="25" />

        <TextView
            android:id="@+id/mobileTV"
            style="@style/client_details_txt"
            android:layout_marginLeft="225dp"
            android:layout_marginTop="32dp"
            android:text="9988776666" />

        <TextView
            style="@style/client_list_title_txt"
            android:layout_marginTop="112dp"
            android:layout_marginLeft="10dp"
            android:text="Plan" />

        <TextView
            style="@style/client_list_title_txt"
            android:layout_marginTop="112dp"
            android:layout_marginLeft="112dp"
            android:text="Start" />

        <TextView
            style="@style/client_list_title_txt"
            android:layout_marginTop="112dp"
            android:layout_marginLeft="225dp"
            android:text="End" />

        <TextView
            android:id="@+id/planTV"
            style="@style/client_list_details_txt"
            android:layout_marginTop="130dp"
            android:layout_marginLeft="10dp"
            android:text="Muscle Gain" />

        <TextView
            android:id="@+id/startdateTV"
            android:layout_width="80dp"
            style="@style/client_list_details_txt"
            android:layout_marginTop="130dp"
            android:layout_marginLeft="112dp"
            android:text="10 Mar 2022" />

        <TextView
            android:id="@+id/enddateTV"
            android:layout_width="80dp"
            style="@style/client_list_details_txt"
            android:layout_marginTop="130dp"
            android:layout_marginLeft="225dp"
            android:text="10 Mar 2023" />

        <TextView
            android:id="@+id/HeightTV"
            style="@style/client_details_txt"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="61dp"
            android:text="Height" />

        <TextView
            android:id="@+id/Height"
            style="@style/client_details_txt"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="79dp"
            android:text="65 feet" />

        <TextView
            android:id="@+id/weightTV"
            style="@style/client_details_txt"
            android:layout_marginLeft="112dp"
            android:layout_marginTop="61dp"
            android:text="Weight" />

        <TextView
            android:id="@+id/weight"
            style="@style/client_details_txt"
            android:layout_marginLeft="112dp"
            android:layout_marginTop="79dp"
            android:text="50 kg" />

        <TextView
            android:id="@+id/BMITV"
            style="@style/client_details_txt"
            android:layout_marginLeft="225dp"
            android:layout_marginTop="61dp"
            android:text="BMI" />

        <TextView
            android:id="@+id/BMI"
            style="@style/client_details_txt"
            android:layout_marginLeft="225dp"
            android:layout_marginTop="79dp"
            android:text="20.2" />
    </androidx.cardview.widget.CardView>

    <HorizontalScrollView
        android:id="@+id/horizontalScrollView"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView">

        <LinearLayout
            android:layout_width="30dp"
            android:layout_height="90dp"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/diet_chart_btn"
                android:layout_width="65dp"
                android:layout_height="80dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/diet_chart_selected" />

            <ImageButton
                android:id="@+id/chat_btn"
                android:layout_width="65dp"
                android:layout_height="80dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/chat_unselected" />

            <ImageButton
                android:id="@+id/metrics_btn"
                android:layout_width="65dp"
                android:layout_height="80dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/metrics_unselected" />

            <ImageButton
                android:id="@+id/tracker_btn"
                android:layout_width="65dp"
                android:layout_height="80dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/tracker_unselected" />

            <ImageButton
                android:id="@+id/health_details_btn"
                android:layout_width="65dp"
                android:layout_height="80dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="30dp"
                android:background="@drawable/health_details_unselected" />
        </LinearLayout>
    </HorizontalScrollView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/horizontalScrollView">

        <FrameLayout
            android:id="@+id/client_details_sec"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/horizontalScrollView" />
    </ScrollView>

    <ImageView
        android:id="@+id/menu_icon_action"
        android:layout_width="30dp"
        android:layout_height="40dp"
        android:src="@drawable/navimg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.008"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.026" />

    <TextView
        android:id="@+id/Client_detials_client_name_top"
        android:layout_width="212dp"
        android:layout_height="33dp"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/fonts"
        android:text="Client Details"
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.366"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
