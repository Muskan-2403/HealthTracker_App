<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ClientDetails"
    android:paddingHorizontal="25dp">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginTop="75dp"
        android:src="@drawable/doctor_pic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="100dp"
        android:fontFamily="@font/montserrat"
        android:text="Ronald Richards"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/imageView2"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="125dp"
        android:fontFamily="@font/montserrat"
        android:text="ronaldrichards@gmail.com"
        android:textColor="@color/black"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@+id/imageView2"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="350dp"
        android:layout_height="130dp"
        android:layout_marginTop="160dp"
        app:cardCornerRadius="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            style="@style/client_title_txt"
            android:layout_marginStart="11dp"
            android:layout_marginTop="12dp"
            android:text="Gender" />

        <TextView
            style="@style/client_title_txt"
            android:layout_marginStart="123dp"
            android:layout_marginTop="12dp"
            android:text="Age" />

        <TextView
            style="@style/client_title_txt"
            android:layout_marginStart="243dp"
            android:layout_marginTop="12dp"
            android:text="Phone No" />

        <TextView
            style="@style/client_details_txt"
            android:layout_marginStart="11dp"
            android:layout_marginTop="32dp"
            android:text="Male" />

        <TextView
            style="@style/client_details_txt"
            android:layout_marginStart="123dp"
            android:layout_marginTop="32dp"
            android:text="25" />

        <TextView
            style="@style/client_details_txt"
            android:layout_marginStart="243dp"
            android:layout_marginTop="32dp"
            android:text="9988776666" />

        <TextView
            style="@style/client_list_title_txt"
            android:layout_marginStart="11dp"
            android:text="Plan" />

        <TextView
            style="@style/client_list_title_txt"
            android:layout_marginStart="123dp"
            android:text="Start" />

        <TextView
            style="@style/client_list_title_txt"
            android:layout_marginStart="243dp"
            android:text="End" />

        <TextView
            style="@style/client_list_details_txt"
            android:layout_marginStart="11dp"
            android:text="Muscle Gain" />

        <TextView
            style="@style/client_list_details_txt"
            android:layout_marginStart="123dp"
            android:text="10 Mar 2022" />

        <TextView
            style="@style/client_list_details_txt"
            android:layout_marginStart="243dp"
            android:text="10 Mar 2023" />
    </androidx.cardview.widget.CardView>

    <HorizontalScrollView
        android:id="@+id/horizontalScrollView"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginTop="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView">

        <LinearLayout
            android:layout_width="30dp"
            android:layout_height="90dp"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/diet_chart_btn"
                android:layout_width="65dp"
                android:layout_height="80dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/diet_chart_selected" />

            <ImageButton
                android:id="@+id/chat_btn"
                android:layout_width="65dp"
                android:layout_height="80dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/chat_unselected" />

            <ImageButton
                android:id="@+id/metrics_btn"
                android:layout_width="65dp"
                android:layout_height="80dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/metrics_unselected" />

            <ImageButton
                android:id="@+id/tracker_btn"
                android:layout_width="65dp"
                android:layout_height="80dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/tracker_unselected" />

            <ImageButton
                android:id="@+id/health_details_btn"
                android:layout_width="65dp"
                android:layout_height="80dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="30dp"
                android:background="@drawable/health_details_unselected" />
        </LinearLayout>
    </HorizontalScrollView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/horizontalScrollView">

        <FrameLayout
            android:id="@+id/client_details_sec"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/horizontalScrollView" />
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>