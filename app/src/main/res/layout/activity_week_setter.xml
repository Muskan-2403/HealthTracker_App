<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WeekSetter"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:id="@+id/calendar_back"
            android:scaleType="center"
            android:src="@drawable/ic_baseline_arrow_back_black"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CALENDAR"
            android:fontFamily="@font/fonts"
            android:textSize="38sp"
            android:textStyle="bold"
            android:layout_marginLeft="75dp"/>
    </LinearLayout>

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal"
        android:id="@+id/days_group">

        <androidx.cardview.widget.CardView
            android:layout_width="60dp"
            android:layout_height="90dp"
            android:layout_marginLeft="2dp"
            app:cardCornerRadius="50dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:id="@+id/sunday"
                android:clickable="true">
                <TextView
                    android:id="@+id/sun"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="S"
                    android:layout_marginStart="20dp"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/fonts"
                    android:textColor="#6F81F8"
                    android:layout_marginEnd="20dp"/>
                <TextView
                    android:id="@+id/sun_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="S"
                    android:layout_marginStart="20dp"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/fonts"
                    android:textColor="#6F81F8"
                    android:layout_marginEnd="20dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_width="60dp"
            android:layout_height="90dp"
            android:layout_marginLeft="2dp"
            android:padding="5dp"
            android:layout_gravity="center"
            app:cardCornerRadius="50dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:id="@+id/monday"
                android:clickable="true">
                <TextView
                    android:id="@+id/mon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="M"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/fonts"
                    android:textColor="#6F81F8"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"/>
                <TextView
                    android:id="@+id/mon_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="M"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:fontFamily="@font/fonts"
                    android:textColor="#6F81F8"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="60dp"
            android:layout_height="90dp"
            android:layout_marginLeft="2dp"
            android:padding="5dp"
            app:cardCornerRadius="50dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:id="@+id/tuesday"
                android:clickable="true">
                <TextView
                    android:id="@+id/tue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="T"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:fontFamily="@font/fonts"
                    android:textColor="#6F81F8"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"/>
                <TextView
                    android:id="@+id/tue_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="T"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/fonts"
                    android:textColor="#6F81F8"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="60dp"
            android:layout_height="90dp"
            android:layout_marginLeft="2dp"
            android:padding="5dp"
            app:cardCornerRadius="50dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:id="@+id/wednesday"
                android:clickable="true">
                <TextView
                    android:id="@+id/wed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="W"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:fontFamily="@font/fonts"
                    android:textColor="#6F81F8"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"/>
                <TextView
                    android:id="@+id/wed_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="W"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:fontFamily="@font/fonts"
                    android:textColor="#6F81F8"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="60dp"
            android:layout_height="90dp"
            android:layout_marginLeft="2dp"
            android:padding="5dp"
            app:cardCornerRadius="50dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:id="@+id/thursday"
                android:clickable="true">

                <TextView
                    android:id="@+id/thur"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="T"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:fontFamily="@font/fonts"
                    android:textColor="#6F81F8"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"/>
                <TextView
                    android:id="@+id/thur_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="T"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:fontFamily="@font/fonts"
                    android:textColor="#6F81F8"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="60dp"
            android:layout_height="90dp"
            android:layout_marginLeft="2dp"
            android:padding="5dp"
            app:cardCornerRadius="50dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:id="@+id/friday"
                android:clickable="true">
                <TextView
                    android:id="@+id/fri"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="F"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:fontFamily="@font/fonts"
                    android:textColor="#6F81F8"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"/>


                <TextView
                    android:id="@+id/fri_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="F"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:fontFamily="@font/fonts"
                    android:textColor="#6F81F8"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="60dp"
            android:layout_height="90dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="5dp"
            android:padding="5dp"
            app:cardCornerRadius="50dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:id="@+id/saturday"
                android:clickable="true">

                <TextView
                    android:id="@+id/sat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="S"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:fontFamily="@font/fonts"
                    android:textColor="#6F81F8"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"/>


                <TextView
                    android:id="@+id/sat_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="S"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:fontFamily="@font/fonts"
                    android:textColor="#6F81F8"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </RadioGroup>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardUseCompatPadding="true"
        app:cardElevation="8dp"
        app:cardCornerRadius="4dp"
        android:layout_marginLeft="5dp"
        android:outlineSpotShadowColor="@color/black">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="1dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="FEB"
                android:textAllCaps="true"
                android:textColor="#004EAD"
                android:fontFamily="@font/baloo_bhai_2"
                android:textSize="24sp"
                android:layout_marginLeft="5dp"
                android:id="@+id/new_appointment_month"/>

            <TextView
                android:id="@+id/new_appointment_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="65dp"
                android:fontFamily="@font/baloo_bhai_2"
                android:text="9:00AM (60 minutes)"
                android:textColor="#004EAD"
                android:textSize="24sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="21"
                android:textAllCaps="true"
                android:textColor="#004EAD"
                android:fontFamily="@font/baloo_bhai_2"
                android:textSize="24sp"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:id="@+id/new_appointment_date"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Time"
                    android:layout_marginTop="0dp"
                    android:layout_marginLeft="10dp"
                    android:textColor="#676767"
                    android:fontFamily="@font/fonts"
                    android:textSize="20sp"/>
                <TimePicker
                    android:id="@+id/timePicker1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:timePickerMode="spinner"
                    android:layout_gravity="center" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Duration"
                    android:layout_marginLeft="10dp"
                    android:textColor="#676767"
                    android:fontFamily="@font/fonts"
                    android:textSize="20sp"/>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_gravity="center">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="100dp"
                android:src="@drawable/ic_baseline_arrow_back_ios_24"/>

    <LinearLayout
        android:layout_width="130dp"
        android:layout_height="50dp"
        android:orientation="horizontal">

    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:scrollbars="horizontal"
        android:scrollbarStyle="insideInset">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <Button
            android:layout_height="50dp"
            android:layout_width="wrap_content"
            android:text="10m"
            android:textAllCaps="false"
            android:background="#FFFFFF"
            android:textColor="#4D83C6"
            android:id="@+id/duration_10m"/>
        <Button
            android:layout_height="60dp"
            android:layout_width="wrap_content"
            android:text="20m"
            android:textAllCaps="false"
            android:background="#FFFFFF"
            android:textColor="#4D83C6"
            android:id="@+id/duration_20m"/>
        <Button
            android:layout_height="60dp"
            android:layout_width="wrap_content"
            android:text="30m"
            android:textAllCaps="false"
            android:background="#FFFFFF"
            android:textColor="#4D83C6"
            android:id="@+id/duration_30m"/>
        <Button
            android:layout_height="60dp"
            android:layout_width="wrap_content"
            android:text="40m"
            android:textAllCaps="false"
            android:background="#FFFFFF"
            android:textColor="#4D83C6"
            android:id="@+id/duration_40m"/>
        <Button
            android:layout_height="60dp"
            android:layout_width="wrap_content"
            android:text="50m"
            android:textAllCaps="false"
            android:background="#FFFFFF"
            android:textColor="#4D83C6"
            android:id="@+id/duration_50m"/>
        <Button
            android:layout_height="60dp"
            android:layout_width="wrap_content"
            android:text="60m"
            android:textAllCaps="false"
            android:background="#FFFFFF"
            android:textColor="#4D83C6"
            android:id="@+id/duration_60m"/>
        <Button
            android:layout_height="60dp"
            android:layout_width="wrap_content"
            android:text="1h10m"
            android:textAllCaps="false"
            android:background="#FFFFFF"
            android:textColor="#4D83C6"
            android:id="@+id/duration_1h10m"/>
        <Button
            android:layout_height="60dp"
            android:layout_width="wrap_content"
            android:text="1h20m"
            android:textAllCaps="false"
            android:background="#FFFFFF"
            android:textColor="#4D83C6"
            android:id="@+id/duration_1h20m"/>
        <Button
            android:layout_height="60dp"
            android:layout_width="wrap_content"
            android:text="1h30m"
            android:textAllCaps="false"
            android:background="#FFFFFF"
            android:textColor="#4D83C6"
            android:id="@+id/duration_1h30m"/>
        </LinearLayout>
    </HorizontalScrollView>
    </LinearLayout>
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_baseline_navigate_next_24"/>
</LinearLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:fontFamily="@font/fonts"
                        android:text="Client Name"
                        android:textColor="#676767"
                        android:textSize="20sp" />
                    <Spinner
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:id="@+id/all_clients_under_me_spinner" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:fontFamily="@font/fonts"
                        android:text="Title"
                        android:textColor="#676767"
                        android:textSize="20sp" />

                    <EditText
                        android:id="@+id/new_appointment_title_edt"
                        android:background="#EFF8FF"
                        android:textAlignment="textStart"
                        android:layout_width="350dp"
                        android:layout_marginLeft="10dp"
                        android:layout_height="40dp"
                        android:hint="Write the title"
                        android:inputType="text" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:fontFamily="@font/fonts"
                        android:text="Location"
                        android:textColor="#676767"
                        android:textSize="20sp" />

                    <EditText
                        android:id="@+id/new_appointment_location_edt"
                        android:background="#EFF8FF"
                        android:textAlignment="textStart"
                        android:layout_height="40dp"
                        android:layout_width="350dp"
                        android:hint="Enter location/online link"
                        android:layout_marginLeft="10dp"
                        android:inputType="text"  />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:fontFamily="@font/fonts"
                        android:text="Note"
                        android:textColor="#676767"
                        android:textSize="20sp" />

                    <EditText
                        android:id="@+id/new_appointment_note_edt"
                        android:background="#EFF8FF"
                        android:textAlignment="textStart"
                        android:layout_marginLeft="10dp"
                        android:layout_width="350dp"
                        android:hint=" Write important note"
                        android:inputType="text"
                        android:layout_height="50dp"
                        android:lines="3"/>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                app:cardCornerRadius="10dp"
                android:layout_gravity="center">
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SAVE"
                    android:textColor="@color/white"
                    android:textSize="22sp"
                    android:background="@color/blue"
                    android:layout_gravity="center"
                    android:id="@+id/new_appointment_save"/>
            </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"/>
                </LinearLayout>

            </LinearLayout>
        </ScrollView>
    </androidx.cardview.widget.CardView>
</LinearLayout>